<h2><i class="bi bi-person-badge"></i> Welcome, {{user.username}} (Manager)</h2>

<form action="/manager/assign" method="POST" class="mb-4">
  <div class="mb-3">
    <label><i class="bi bi-card-text"></i> Description</label>
    <input type="text" name="description" class="form-control" required>
  </div>
  <div class="mb-3">
    <label><i class="bi bi-person-plus"></i> Assign to</label>
    <select name="assignedTo" class="form-control" required>
      {{#each personnel}}
      <option value="{{this.username}}">{{this.username}}</option>
      {{/each}}
    </select>
  </div>
  <button class="btn btn-success"><i class="bi bi-plus-circle"></i> Assign Delivery</button>
</form>

<h4><i class="bi bi-list-ul"></i> All Deliveries</h4>
<table class="table table-bordered">
  <thead>
    <tr><th><i class="bi bi-hash"></i> ID</th><th><i class="bi bi-card-text"></i> Description</th><th><i class="bi bi-person"></i> Assigned To</th><th><i class="bi bi-flag"></i> Status</th></tr>
  </thead>
  <tbody>
    {{#each deliveries}}
    <tr>
      <td>{{id}}</td>
      <td>{{description}}</td>
      <td>{{assignedTo}}</td>
      <td>{{status}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
