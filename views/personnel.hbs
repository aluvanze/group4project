<h2><i class="bi bi-truck"></i> Welcome, {{user.username}} (Delivery Personnel)</h2>

<table class="table table-striped">
  <thead>
    <tr><th><i class="bi bi-hash"></i> ID</th><th><i class="bi bi-card-text"></i> Description</th><th><i class="bi bi-flag"></i> Status</th><th><i class="bi bi-gear"></i> Update</th></tr>
  </thead>
  <tbody>
    {{#each deliveries}}
    <tr>
      <td>{{id}}</td>
      <td>{{description}}</td>
      <td>{{status}}</td>
      <td>
        <form action="/personnel/update/{{id}}" method="POST">
          <select name="status" class="form-select">
            <option>Pending</option>
            <option>In Progress</option>
            <option>Delivered</option>
          </select>
          <button class="btn btn-sm btn-success mt-1"><i class="bi bi-check-circle"></i> Update</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
