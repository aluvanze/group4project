<h2>Welcome, {{user.username}} (Delivery Personnel)</h2>

<table class="table table-striped">
  <thead>
    <tr><th>ID</th><th>Description</th><th>Status</th><th>Update</th></tr>
  </thead>
  <tbody>
    {{#each deliveries}}
    <tr>
      <td>{{id}}</td>
      <td>{{description}}</td>
      <td>{{status}}</td>
      <td>
        <form action="/personnel/update/{{id}}" method="POST">
          <select name="status" class="form-select">
            <option>Pending</option>
            <option>In Progress</option>
            <option>Delivered</option>
          </select>
          <button class="btn btn-sm btn-success mt-1">Update</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
