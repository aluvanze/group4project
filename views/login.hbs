<div class="card col-md-6 mx-auto mt-5 p-4 shadow">
  <h3 class="text-center"><i class="bi bi-person-circle"></i> Login</h3>
  {{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}
  {{#if success}}<div class="alert alert-success">{{success}}</div>{{/if}}
  <form action="/login" method="POST">
    <div class="mb-3">
      <label><i class="bi bi-person"></i> Username</label>
      <input type="text" name="username" class="form-control" required>
    </div>
    <div class="mb-3">
      <label><i class="bi bi-lock"></i> Password</label>
      <input type="password" name="password" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-box-arrow-in-right"></i> Login</button>
  </form>
  <p class="mt-3 text-center">Don't have an account? <a href="/register">Create one</a></p>
</div>
